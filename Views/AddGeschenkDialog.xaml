<Window x:Class="SchedlbergerEkaterina_WPF_.Views.AddGeschenkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Neues Geschenk hinzufÃ¼gen" 
        Height="550" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#FFF3F4F6"
        FontFamily="Segoe UI">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Name -->
        <TextBlock Grid.Row="0" 
                   Text="Was kommt auf den Wunschzettel?" 
                   FontWeight="SemiBold" 
                   Foreground="ForestGreen"
                   Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" 
                 Text="{Binding NeuerName, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,10" 
                 Height="40"
                 Padding="8"/>

        <!-- PrioritÃ¤t -->
        <TextBlock Grid.Row="2" 
                   Text="Wie wichtig ist das?" 
                   FontWeight="SemiBold" 
                   Foreground="ForestGreen"
                   Margin="0,0,0,5"/>
        <ComboBox Grid.Row="3" 
                  SelectedValue="{Binding NeuePrioritaet}" 
                  SelectedValuePath="Content"
                  Margin="0,0,0,10" 
                  Height="40"
                  Padding="8">
            <ComboBoxItem Content="weniger wichtig"/>
            <ComboBoxItem Content="wichtig"/>
            <ComboBoxItem Content="super wichtig"/>
        </ComboBox>

        <!-- IstWichtig -->
        <CheckBox Grid.Row="4" 
                  Content="Ist wichtig?" 
                  IsChecked="{Binding IstWichtig}" 
                  Foreground="ForestGreen"
                  FontWeight="SemiBold"
                  Margin="0,0,0,10"/>

        <!-- Preis -->
        <TextBlock Grid.Row="5" 
                   Text="Preis (â‚¬)" 
                   FontWeight="SemiBold" 
                   Foreground="ForestGreen"
                   Margin="0,0,0,5"/>
        <TextBox Grid.Row="6" 
                 Text="{Binding Preis, StringFormat={}{0:F2}, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,10" 
                 Height="40"
                 Padding="8"/>

        <!-- Bild -->
        <TextBlock Grid.Row="7" 
                   Text="Bild dazu?" 
                   FontWeight="SemiBold" 
                   Foreground="ForestGreen"
                   Margin="0,0,0,5"/>
        <StackPanel Grid.Row="8" 
                    Orientation="Vertical" 
                    Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding NeuesBild, UpdateSourceTrigger=PropertyChanged}" 
                         IsReadOnly="True" 
                         Width="200" 
                         Padding="5"
                         Margin="0,0,10,0"/>
                <Button Content="ðŸ–¼ Bild auswÃ¤hlen" 
                        Click="BildAuswaehlen_Click"/>
            </StackPanel>
            <!-- Mini Bild Vorschau -->
            <Image Source="{Binding NeuesBild, TargetNullValue={x:Null}}"
                   Height="50"
                   HorizontalAlignment="Left"
                   Stretch="Uniform"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="9" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Abbrechen" 
                    IsCancel="True" 
                    Width="100"
                    Margin="0,0,10,0"/>
            <Button Content="Speichern" 
                    IsDefault="True" 
                    Click="Save_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
